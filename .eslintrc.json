{
  "env": { "browser": true, "node": true, "es6": true },
  "parser": "@typescript-eslint/parser",
  "extends": ["plugin:@typescript-eslint/recommended", "jhipster", "eslint:recommended"],
  "plugins": ["@typescript-eslint", "@typescript-eslint/tslint"],
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"],
      "@typescript-eslint": [".ts"]
    },
    "import/resolver": {
      "typescript": {}
    }
  },
  "parserOptions": {
    "project": "./tsconfig.base.json"
  },
  "rules": {
    "eqeqeq": "off",
    "member-ordering": [
      "off",
      {
        "order": [
          {
            "name": "static non-private",
            "kinds": ["public-static-field", "protected-static-field", "public-static-method", "protected-static-method"]
          },
          "constructor"
        ]
      }
    ],
    "no-console": ["off", "debug", "time", "timeEnd", "trace"],
    "no-unused-vars": "off",
    "@typescript-eslint/tslint/config": [
      "error",
      {
        "lintFile": "./tslint.json"
      }
    ],
    "@typescript-eslint/no-inferrable-types": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "@typescript-eslint/no-non-null-assertion": "off"
  }
}
